{% block body %}
	{% include('back_end/index.html.twig') %}
	<div class="page-wrapper">
		<div class="container-fluid" style="height: 100%;">
			<div id="easyPaginate" style="    display: inline-flex;
					">
				<div class="row">

					{% for Service in Services %}
						<div class="col-md-6">
							<div class="card" style=" height: 200px;border-radius: 25px;box-shadow: 5px 5px 5px  rgba(0,0,0,0.6)">
								<div class="row no-gutters" style="height: 100%;">
									<div class="col-md-6" style="height: 100%;">
										<div id="carouselExampleControls{{ Service.id }}" class="carousel slide" data-interval="false" data-ride="carousel" style="height: 100%;">
											<div class="carousel-inner" style="height: 100%;">
												{% for media in Service.media %}
													{% if loop.first %}
														<div class="carousel-item active" style="height: 100%;">
														{% else %}
															<div class="carousel-item" style="height: 100%;">
															{% endif %}
															{%  if 'image' in media.url %}
																{% set image =   media.url|reverse  %}
																<img src="{{ image[7:]|reverse }}" class="d-block w-100" style="height: 100%;object-fit: cover;border-radius: 25px 0px 0px 25px;">

															{% endif %}
														</div>
													{% endfor %}
												</div>
												{% if Service.media|length > 1 %}
													<a class="carousel-control-prev" href="#carouselExampleControls{{ Service.id }}" role="button" data-slide="prev" style="background-color: black !important;margin-bottom: 20%;    top: 30%;">
													<span class="carousel-control-prev-icon" aria-hidden="true"></span>
													<span class="sr-only">Previous</span>
												</a>
												<a class="carousel-control-next" href="#carouselExampleControls{{ Service.id }}" role="button" data-slide="next" style="background-color: black !important;margin-bottom: 20%;    top: 30%;">
													<span class="carousel-control-next-icon" aria-hidden="true"></span>
													<span class="sr-only">Next</span>
												</a>
												{% endif %}
												
											</div>
										</div>
										<div class="col-md-5" style="height: 100%;">
											<div class="card-body" style="height: 100%;">
												<div class="row" style="width: 140%;">
													<div class="col">
														<h5 class="card-title">{{ Service.Titre }}</h5>
													</div>
													<div class="col-sm-2">
														<div class="btn-group" role="group">
															<button id="btnGroupDrop1" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background: transparent;
																																																    border: none;">
																<i class="mdi mdi-dots-vertical"></i>
															</button>
															<div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
																<a class="dropdown-item" href="{{ path('ServiceUpdate' , {'id': Service.id }) }}">Modifier</a>
																<a class="dropdown-item" href="{{ path('DeleteServices' , {'id': Service.id }) }}">Supprimer</a>
															</div>
														</div>
													</div>
												</div>
												<p class="card-text" style="height: 90%; width: 130%;overflow-y: scroll;">{{ Service.Decription }}
												</p>
											</div>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}

					</div>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block  javascript %}
	<script src="/assets/js/jquery.easyPaginate.js"></script>
	<script>
		$('#easyPaginate').easyPaginate({paginateElement: '.col-md-6', elementsPerPage: 10, effect: 'climb'});
	</script>
{% endblock %}
