{% block body %}
	{% include('back_end/index.html.twig') %}
	<div class="page-wrapper">
		<div class="container-fluid" style="height: 100%;">
			<div id="easyPaginate">
				{% for Service in Services %}
					<div class="card mb-3" style="    width: 50%; height: 200px;">

						<div class="row no-gutters" style="height: 100%;">
							<div class="col-md-6" style="height: 100%;">
								<div id="carouselExampleControls{{ Service.id }}" class="carousel slide" data-ride="carousel" style="height: 100%;">
									<div class="carousel-inner" style="height: 100%;">

										{% for media in Service.media %}
											{% if loop.first %}
												<div class="carousel-item active">
												{% else %}
													<div class="carousel-item">
													{% endif %}
                                                    {%  if 'image' in media.url %}
                                                    {% set image =   media.url|reverse  %}
                                                    
                                                    <img src="{{ image[7:]|reverse  }}" class="d-block w-100">
                                                    {% else %}
                                                    <video width="320" height="240" autoplay>
														<source src="{{ media.url }}" type="video/mp4">
                                                    </video>
                                                    {% endif %}
													
													
													</div>
												{% endfor %}
											</div>
											<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
												<span class="carousel-control-prev-icon" aria-hidden="true"></span>
												<span class="sr-only">Previous</span>
											</a>
											<a class="carousel-control-next" href="#carouselExampleControls{{ Service.id }}" role="button" data-slide="next">
												<span class="carousel-control-next-icon" aria-hidden="true"></span>
												<span class="sr-only">Next</span>
											</a>
										</div>
									</div>
									<div class="col-md-5" style="height: 100%;">
										<div class="card-body" style="height: 100%;">
											<div class="row" style="    width: 140%;">
												<div class="col">
													<h5 class="card-title">{{ Service.Titre }}</h5>
												</div>
												<div class="col-sm-2">
													<div class="btn-group" role="group">
														<button id="btnGroupDrop1" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background: transparent;
																															    border: none;">
															<i class="mdi mdi-dots-vertical"></i>
														</button>
														<div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
															<a class="dropdown-item" href="#">Dropdown link</a>
															<a class="dropdown-item" href="#">Dropdown link</a>
														</div>
													</div>
												</div>
											</div>
											<p class="card-text" style="height: 90%;
																							    width: 130%;
																							    overflow-y: scroll;">{{ Service.Decription }}
											</p>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}

					</div>
				</div>
			</div>
		</div>
	{% endblock %}
	{% block  javascript %}
		<script src="/assets/js/jquery.easyPaginate.js"></script>
		<script>
			$('#easyPaginate').easyPaginate({paginateElement: '.card', elementsPerPage: 3, effect: 'climb'});
		</script>
	{% endblock %}
